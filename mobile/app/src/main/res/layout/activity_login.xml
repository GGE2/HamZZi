<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6cfb9"
    tools:context=".view.activities.LoginActivity">

  <ImageView
    android:id="@+id/imageview_main_title"
      android:layout_width="wrap_content"
      android:layout_height="500dp"
      android:src="@drawable/hamzzi"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>
  <TextView
      android:id="@+id/textview_main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="HAMZZI"
      android:textStyle="bold"
      android:textSize="60sp"
      android:fontFamily="@font/nexon_gothic_bold"
      app:layout_constraintTop_toBottomOf="@id/imageview_main_title"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="#f2e4d9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/textview_main_title"
      app:layout_constraintBottom_toBottomOf="parent">
  <com.google.android.gms.common.SignInButton
      android:id="@+id/googleSignIn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:background="#4286f4"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:iconGravity="textStart"
      android:textAllCaps="false"
      />
  <ImageView
      android:id="@+id/kakaoSignIn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/kakao_login_large_wide"
      app:layout_constraintTop_toBottomOf="@id/googleSignIn"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>